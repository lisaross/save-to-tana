{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useSingleQuotes": true,
        "noUnusedVariables": true,
        "noConsole": false
      },
      "suspicious": {
        "noExplicitAny": true
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "quoteStyle": "single"
  }
} 